{
  "name": "@stoked-cenv/cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "type": "library",
  "sourceRoot": "packages/cli/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ],
      "options": {
        "outputPath": "dist/cli",
        "baseUrl": "packages/cli/src",
        "main": "packages/cli/src/main.ts",
        "lib": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.build.json",
        "deleteOutputPath": true
      }
    },
    "cenv": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "ts-node packages/cli/src/main.ts i -cenv"
        ],
        "parallel": false
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./git-check.sh",
          "pnpm run version:bump:all",
          "pnpm --filter \"@stoked-cenv/*\" up \"@stoked-cenv/*\"",
          "pnpm run link:cli",
          "nx run @stoked-cenv/cli:build",
          "nx run @stoked-cenv/cdk:build",
          "pnpm run publish:bump:all",
          "cd example/packages/api/ && pnpm up \"@stoked-cenv/*\""
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/@stoked-cenv/cli",
        "command": "pnpm publish"
      }
    },
    "test": {
      "executor": "nx-uvu:uvu",
      "options": {
        "rootDir": "./",
        "useSwc": true,
        "coverage": true,
        "pattern": "packages/cli/test/index.spec.ts"
      }
    },
    "e2e": {
      "executor": "nx-uvu:uvu",
      "options": {
        "rootDir": "./",
        "useSwc": true,
        "coverage": true,
        "pattern": "packages/cli/test/e2e.spec.ts"
      }
    },
    "server": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/cli",
        "command": "node dist/server.js"
      }
    },
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/cli",
        "command": "node dist/main.js"
      }
    }
  },
  "implicitDependencies": ["@stoked-cenv/lib", "@stoked-cenv/ui"]
}
