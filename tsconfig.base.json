{
  "compilerOptions": {
    "lib": ["es2022", "es2020"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "node_modules/@types/node"
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "bin",
    "deploy",
    "dist",
    "test",
    "Dockerfile"
  ]
}
